{
  "openapi": "3.0.1",
  "info": {
    "title": "Jobify.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Employer/validate-oib": {
      "post": {
        "tags": [
          "Employer"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "text/json": {
              "schema": {
                "type": "string"
              }
            },
            "application/*+json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Employer/register": {
      "post": {
        "tags": [
          "Employer"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmployerRegistrationDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EmployerRegistrationDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EmployerRegistrationDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/files/{fileName}": {
      "get": {
        "tags": [
          "File"
        ],
        "parameters": [
          {
            "name": "fileName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EmployerRegistrationDTO": {
        "required": [
          "firm",
          "position",
          "user"
        ],
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/UserDTO"
          },
          "firm": {
            "$ref": "#/components/schemas/FirmDTO"
          },
          "position": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "FirmDTO": {
        "required": [
          "address",
          "firmName",
          "oib"
        ],
        "type": "object",
        "properties": {
          "firmName": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "oib": {
            "maxLength": 11,
            "minLength": 11,
            "pattern": "^\\d{11}$",
            "type": "string"
          },
          "address": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "industry": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserDTO": {
        "required": [
          "mail",
          "name",
          "password",
          "surname"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "surname": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "mail": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}